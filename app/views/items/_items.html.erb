<div class="container">
  <div class="container-inner inner-default clearfix">
    <% items['Items'].each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            
            <%= link_to image_tag(item['Item']['largeImageUrl'].gsub('?_ex=200x200', '') , alt: item['Item']['title']),item['Item']['itemUrl'], { :target => "_blank"}  %>
          
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%=link_to item['Item']['title'], item['Item']['itemUrl'], { :target => "_blank"}  %>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want") ,
                      :class => "btn-want btn btn-danger btn-sm want",
                      :item_code => "want-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have") ,
                      :class => "btn-have btn btn-warning btn-sm have",
                      :item_code => "have-#{item['itemCode']}",
                      :remote => true,
                      :method => :post %>
        </div>
      </div>
    <% end %>
  </div>
</div>
