<% content_for :head  do %>
  <title><%= @item.title %>- monolist</title>
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
              <!--<%= image_tag("no-image.png" , alt: @item.title) %>-->
              <%= image_tag(@item.medium_image.gsub('?_ex=128x128', '') , alt: @item.title) %>
        </div>
      </div>

      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @have_users = @item.have_users 
            @have_users.each do |hu|%>
            <%= link_to gravatar_for(hu, size: 20), hu %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @want_users = @item.want_users 
            @want_users.each do |wu|%>
            <%= link_to gravatar_for(wu, size: 20), wu %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url, {alt: @item.title,  :target => "_blank"})  %>
        
      </div>
    </div>
  </div>
</div>
